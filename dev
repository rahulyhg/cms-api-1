#!/usr/bin/env bash

if [ $# -gt 0 ]; then

    if [ "$1" == "build" ]; then
        docker build -t nari/wep -f ./docker/app/Dockerfile .
        docker build -t nari/node -f ./docker/node/Dockerfile .

    elif [ "$1" == "start" ]; then
        docker-compose up -d

    elif [ "$1" == "stop" ]; then
        docker-compose down

    elif [ "$1" == "composer" ] || [ "$1" == "comp" ]; then
        shift 1
        docker-compose exec web composer "$@"

    elif [ "$1" == "unit_test" ]; then
        shift 1
        docker-compose exec web ./vendor/bin/phpunit "$@"

    elif [ "$1" == "npm" ]; then
        shift 1
        docker-compose run --rm node npm "$@"

    elif [ "$1" == "yarn" ]; then
        shift 1
        docker-compose run --rm node yarn "$@"

    elif [ "$1" == "gulp" ]; then
        shift 1
        docker-compose run --rm node ./node_modules/.bin/gulp "$@"
    else
        docker-compose "$@"
    fi

else
    docker-compose ps
fi